{
  "name": "reptimer",
  "private": true,
  "version": "1.0.14",
  "type": "module",
  "description": "A production-ready HIIT interval timer PWA",
  "keywords": [
    "hiit",
    "timer",
    "workout",
    "intervals",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "version-bump": "node scripts/version-bump.cjs",
    "build": "npm run version-bump && tsc && vite build",
    "build:no-bump": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf dist",
    "kill-dev": "pkill -f vite || true",
    "check-ports": "lsof -i :5173-5180 || echo 'No processes found on dev ports'",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-node": "^3.2.4",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0",
    "workbox-window": "^7.0.0"
  }
}
